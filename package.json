{
    "name": "empires-legacy",
    "version": "1.0.0",
    "private": true,
    "scripts": {
      "start": "node src/server/index.js",
      "dev:client": "webpack serve --mode development",
      "dev:server": "nodemon src/server/index.js",
      "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
      "build": "webpack --mode production",
      "build:client": "webpack --mode production",
      "build:server": "babel src/server -d dist/server",
      "setup-db": "node src/server/db/scripts/setup.js",
      "test": "jest",
      "lint": "eslint src",
      "format": "prettier --write \"src/**/*.{js,jsx}\""
    },
    "dependencies": {
      "@react-spring/web": "^9.7.3",
      "axios": "^1.6.7",
      "cors": "^2.8.5",
      "dotenv": "^16.4.1",
      "express": "^4.18.2",
      "ioredis": "^5.3.2",
      "jsonwebtoken": "^9.0.2",
      "mysql2": "^3.9.1",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-konva": "^18.2.10",
      "react-router-dom": "^6.22.0",
      "socket.io": "^4.7.4",
      "socket.io-client": "^4.7.4",
      "uuid": "^9.0.1",
      "zustand": "^4.5.0"
    },
    "devDependencies": {
      "@babel/cli": "^7.23.9",
      "@babel/core": "^7.23.9",
      "@babel/preset-env": "^7.23.9",
      "@babel/preset-react": "^7.23.9",
      "autoprefixer": "^10.4.17",
      "babel-loader": "^9.1.3",
      "concurrently": "^8.2.2",
      "css-loader": "^6.10.0",
      "eslint": "^8.56.0",
      "eslint-plugin-react": "^7.33.2",
      "html-webpack-plugin": "^5.6.0",
      "jest": "^29.7.0",
      "mini-css-extract-plugin": "^2.7.7",
      "nodemon": "^3.0.3",
      "postcss": "^8.4.33",
      "postcss-loader": "^8.1.0",
      "prettier": "^3.2.4",
      "style-loader": "^3.3.4",
      "tailwindcss": "^3.4.1",
      "webpack": "^5.90.1",
      "webpack-cli": "^5.1.4",
      "webpack-dev-server": "^4.15.1"
    }
  }